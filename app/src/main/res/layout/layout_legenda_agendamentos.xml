        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/cancel_icon" />

        <TextView
            android:id="@+id/textView2"
