<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dataAgendamentoTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/data_agendamento"
        style="@style/Label"/>

    <EditText
        android:id="@+id/dataAgendamentoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        style="@style/Label"/>

    <TextView
        android:id="@+id/profissionalTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profissional"
        style="@style/Label"/>

    <Spinner
        android:id="@+id/spnProfissional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/horarioTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/horarioAgendamento"
        style="@style/Label"/>

    <ListView
        android:id="@+id/horariosListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:choiceMode="singleChoice"/>

    <Button
        android:id="@+id/buttonAgendamento"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"
        android:text="Agendar" />

</LinearLayout>
