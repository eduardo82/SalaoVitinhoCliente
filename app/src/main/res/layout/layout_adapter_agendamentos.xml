<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/layoutLinearDados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.1">
        <TextView
            android:id="@+id/textViewDataHoraSolicitada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewSolicitante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingBottom="5dp"
            android:paddingTop="3dp"
            android:text=""
            android:textSize="15sp"
            android:layout_alignParentStart="true" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:orientation="vertical"
        android:id="@+id/LinearLayoutStatus">


        <ImageView
            android:id="@+id/imageViewStatus"
            android:layout_width="23dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/checkBoxAcao"
            android:layout_gravity="center_vertical"
            app:srcCompat="@mipmap/ic_ok_icon" />

        <CheckBox
            android:id="@+id/checkBoxAcao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColorLink="@color/colorPrimary"
            android:buttonTint="@color/colorPrimary"/>


    </LinearLayout>
</LinearLayout>
