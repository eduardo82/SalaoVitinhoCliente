<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Label">
        <item name="android:color">#000000</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:paddingTop">3sp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Label_Sem_Left">
        <item name="android:color">#000000</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BotaoInicial">
        <item name="android:color">#3F51B5</item>
        <item name="android:layout_height">130dp</item>
        <item name="android:textColor">#3F51B5</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">top|center</item>
        <item name="android:paddingTop">70dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>
